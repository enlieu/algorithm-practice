/**
 * @param {number[]} nums
 * @return {number}
 */
var findUnsortedSubarray = function(nums) {
  let sorted = [...nums].sort((a, b) => a - b)
  
  let start;
  let end;
  
  for (let i = 0; i < sorted.length; i++) {
    if (sorted[i] !== nums[i]) {
      start = i
      break;
    }
  }
  
  for (let i = sorted.length - 1; i >= 0; i--) {
    if (sorted[i] !== nums[i]) {
      end = i
      break;
    }
  }
  
  if (start === undefined && end === undefined) return 0;
  
  return end - start + 1
}
  
