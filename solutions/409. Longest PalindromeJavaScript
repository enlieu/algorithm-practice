/**
 * @param {string} s
 * @return {number}
 */
var longestPalindrome = function(s) {
  let map = new Map()
  let len = 0;
  
  for (let i = 0; i < s.length; i++) {
    if (!map.has(s[i])) {
      map.set(s[i], 1)
    } else {
      map.set(s[i], map.get(s[i]) + 1)
    }
  }
​
  for (let [letter, frequency] of map.entries()) {
    while (frequency >= 2) {
      frequency -= 2
      len += 2
    }
  }
​
  return len === s.length ? len : len + 1
};
